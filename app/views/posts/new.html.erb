<h1>posts#new</h1>
<ul>
    <li>user is allowed to add new post</li>
    <li>submit button will redirect to create action</li>
</ul>

<% if @post.errors.any? %>
    <h2><%= pluralize( @post.errors.count, "error") %> occured</h2>
    <ul>
        <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
    </ul> 
<% end %>


<%= form_for :post, url: posts_path do |f| %>
    <p>
         <%= f.label "title"  %>
         <%= f.text_field "title"  %>
    </p>

    <p>
         <%= f.label "text"  %>
         <%= f.text_field "text"  %>
    </p>

    <p><%= f.submit %></p>
<% end %>
