<h1>posts#index</h1>

<ul>
  <li>index page must show all posts</li>
  <li>user is allowed to show / edit / destroy posts</li>
  <li>user can redirect to new post page</li>
</ul>

    <table>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>text</th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td><%= link_to "show", post_path(post) %></td>
            <td><%= link_to "edit", edit_post_path(post) %></td>
            <td><%= link_to "destroy", post_path(post), method: :delete %></td>
        </tr>
        <% end %>
    </table>
