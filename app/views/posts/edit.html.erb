<h1>posts#edit</h1>
<ul>
    <li>user can edit post</li>
    <li>similar to new post view page</li>
</ul>

<% if @post.errors.any? %>
    <h2><%= pluralize( @post.errors.count, "error") %> occured</h2>
    <ul>
        <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
    </ul> 
<% end %>

<%= form_for :post, url: post_path, method: :patch do |f| %>
    <p>
         <%= f.label "title"  %>
         <%= f.text_field "title"  %>
    </p>

    <p>
         <%= f.label "text"  %>
         <%= f.text_field "text"  %>
    </p>

    <p><%= f.submit %></p>
<% end %>
